---
import { Image } from 'astro:assets';
import Anchor from '../components/Anchor.astro';
import Navbar from '../components/Navbar';
import SectionHeading from '../components/SectionHeading.astro';
import Skill from '../components/Skill.astro';
// import Timeline from '../components/Timeline';
import Layout from '../layouts/Layout.astro';
import Project from '../components/Project.astro';

import aboutPhoto from '../assets/AboutPhoto.png';
import tilt from '../assets/Tilt.png';
import wave from '../assets/Wave.png'
import tiltDark from '../assets/TiltDark.png'

import { links, experience, projects, skills } from '../constants';
---

<Layout title="Mateusz Hladky">
  <!-- <Timeline links={links} client:only /> -->
  <Navbar links={links} client:only />
  <!-- hero -->
  <main id="hero" class="h-screen bg-gradient-to-bl from-background-gradient-1 to-background-gradient-2 p-4 md:p-8 lg:p-16 xl:p-32 relative flex justify-center items-center">

      <div class="flex flex-col gap-4 md:grid md:grid-cols-2 md:gap-0">
        <div class="flex flex-col">
          <h1 class="text-heading-primary font-bold text-4xl sm:text-5xl md:text-6xl">Mateusz Hladky<span class="text-gradient">.</span></h1>
          <h2 class="-order-1 text-gradient font-light text-2xl sm:text-3xl md:text-4xl">Welcome, my name is</h2>
        </div>
        <p class="text-text px-1 lg:text-lg">
          I am a high school student with a passion for continuous improvement. I build web apps using technologies like React, Next.js, Tailwind, Typescript and Drizzle ORM. I have contributed to open source projects like create-t3-app.
        </p>
        <p class="text-text px-1 lg:text-lg">
           Apart from programming, I play volleyball, I like nature and travelling. I am eager to bring my skills and enthusiasm to a team where I can grow as a developer.
        </p>
        <figure class="shrink-0 max-w-[250px] md:max-w-[300px] xl:max-w-[325px] relative ring-1 ring-accent-gradient-1 self-center md:row-start-1 md:row-end-4 md:col-start-2 md:mx-auto">
          <Image src={aboutPhoto} alt="Mateusz Hladky" width={aboutPhoto.width} height={aboutPhoto.height} class="w-full relative z-30 transition select-none duration-300 ease-linear">
        </figure>
      </div>

    <Image src={tilt} alt="" width={tilt.width} height={tilt.height} class="absolute bottom-0 left-0 w-full" />
  </main>
  <!-- experience -->
  <section id="experience" class="min-h-screen py-16 pl-4 sm:px-16 md:px-32 xl:px-56 bg-background-main flex flex-col gap-8 md:gap-16">
        <SectionHeading num={1} title="experience" />
        <div class="flex flex-col gap-8 md:gap-12 px-2">
          {experience.map(({company, duration, skills, position, type}) => (
            <div class="grid grid-cols-[30px,_1fr]">
              <div class="row-span-full pt-2.5 md:pt-3">
                <div class="w-3 h-3 bg-gradient-to-tr from-accent-gradient-1 to-accent-gradient-2 rounded-full" />
              </div>
              <div class="flex flex-col">
                <span class="text-xl text-heading-primary font-medium md:text-2xl">{company}</span>
                <span class="font-medium text-gradient md:text-lg">{position}</span>
                <span class="text-text">{duration} â€¢ {type}</span>
                <ul class="mt-2">
                  {skills.map(skill => (
                    <li class="text-text">- {skill}</li>
                  ))}
                </ul>
              </div>
            </div>
          ))}
           <p class="text-lg md:text-xl text-heading-primary">
              I also contribute to open-source projects like <a href="https://create.t3.gg" target="_blank" rel="noreferrer" class="text-accent-gradient-2 hover:text-accent-gradient-1 transition">create-t3-app</a>
          </p>
        </div>
  </section>
  <!-- skills -->
  <section id="skills" class="min-h-screen pl-4 py-16 sm:px-16 md:px-32 xl:px-56 flex items-center bg-background-main">
    <div class="flex flex-col gap-8">
      <SectionHeading num={2} title="skills"  />
      <p class="text-lg md:text-xl text-text">Here are the technologies I currently use. I am always eager to learn and expand my skill set.
      </p>
      <div class="gap-x-4 gap-y-8 md:gap-y-16 grid grid-cols-[repeat(auto-fill,5rem)] justify-center">
        {skills.map(skill => (
          <Skill img={`${skill}.png`} alt={skill} label={skill} />
        ))}
      </div>
    </div>
  </section>
  <!-- projects -->
  <section class="min-h-[175vh] pl-4 sm:px-16 pt-32 pb-16 md:px-32 xl:px-56 flex items-center bg-gradient-to-b from-background-gradient-2  to-background-gradient-1 relative">
    <Image src={wave} alt="" width={wave.width} height={wave.height} class="absolute top-0 left-0 w-full" />
    <div class="flex flex-col gap-16 relative">
      <div class="absolute -top-32 left-0" id="projects" />
      <SectionHeading num={3} title="projects" />
        <div class="flex flex-wrap gap-16">
          {projects.map(project => (
            <Project project={project} />
          ))}
        </div>
      <p class="text-lg md:text-xl text-heading-primary">
        For more projects visit my <a href="https://github.com/matibox" target="_blank" rel="noreferrer" class="text-accent-gradient-2 hover:text-accent-gradient-1 transition">github</a>
      </p>
     </div>
    <Image src={tiltDark} alt="" width={tiltDark.width} height={tilt.height} class="absolute bottom-0 left-0 w-full" />
  </section>
  <!-- contact -->
  <section id="contact" class="min-h-screen px-10 sm:px-16 md:px-32 xl:px-56 flex items-center bg-background-dark relative">
    <div class="flex flex-col gap-8">
      <SectionHeading num={4} title="contact"  />
      <p class="text-lg md:text-xl text-text max-w-2xl">Thank you for visiting my portfolio! I'm actively looking for opportunities. Just click the button below and send me an email.</p>
      <Anchor href='mailto:mateusz.hladky@gmail.com' selfStart newTab>
        Contact me
      </Anchor>
