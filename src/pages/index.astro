---
import Anchor from '../components/Anchor.astro';
import SectionHeading from '../components/SectionHeading.astro';
import Timeline from '../components/Timeline';
import Layout from '../layouts/Layout.astro';

const links: string[] = ['about', 'skills', 'projects', 'contact'];

---

<Layout title="Mateusz Hladky">
  <!-- nav -->
  <nav class="z-20 w-full flex justify-between py-8 px-16 items-center fixed top-0 left-0">
    <a href="#hero">
      <img src="/Logo.svg" alt="Logo" />
    </a>
    <div class="flex gap-20">
      {links.map((link, i) => (
        <a class="flex group gap-[6px] items-end" href={`#${link}`}>
          <span class="text-gradient font-lato">{i + 1}.</span>
          <span class="text-xl text-heading-primary group-hover:text-transparent group-hover:bg-clip-text group-hover:bg-gradient-to-r group-hover:from-accent-gradient-1 group-hover:to-accent-gradient-2">
            {`${link.charAt(0).toUpperCase()}${link.slice(1)}`}
          </span>
        </a>  
      ))} 
    </div>
  </nav>
  <Timeline links={links} client:only />
  <!-- hero -->
  <main id="hero" class="h-screen bg-gradient-to-bl from-background-gradient-1 to-background-gradient-2 pl-64 flex items-center relative">
    <div class="flex flex-col gap-4">
      <div class="flex flex-col">
        <h1 class="text-heading-primary font-bold text-6xl">Mateusz Hladky<span class="text-gradient">.</span></h1>
        <h2 class="-order-1 text-gradient font-light text-4xl">Hi, my name is</h2>
      </div>
      <p class="text-text text-xl pl-0.5 mb-2">A Self-taught frontend developer</p>
      <Anchor href='#about' selfStart>
        About me
      </Anchor>
    </div>
    <img src="/Tilt.png" alt="" class="absolute bottom-0 left-0 w-full" />
  </main>
  <!-- about -->
  <section id="about" class="h-screen px-64 flex items-center bg-background-main">
    <div class="flex flex-col gap-16">
      <SectionHeading num={1} title="about" />
      <div class="flex items-center justify-between gap-64">
        <p class="text-xl text-text">Hello! My name is Mateusz Hladky. I am a high school student. I started learning programming in 2020. I always look to improve in every aspect, especially in coding. I'm mainly a front-end developer, but I'm not scared of backend. Besides programming, I'm into volleyball, sim racing, and all kinds of motor racing - mainly Formula 1.</p>
        <figure class="shrink-0 w-1/3 relative ring-1 ring-accent-gradient-1 before:absolute before:top-0 before:left-0 before:bg-background-main before:z-20 before:w-full before:h-full after:w-full after:h-full after:absolute after:top-3 after:left-3 after:transition-transform after:bg-accent-main after:z-10 group hover:after:-translate-x-3 hover:after:-translate-y-3 after:duration-300">
          <img src="/AboutPhoto.png" alt="Mateusz Hladky" class="grayscale w-full relative z-30 transition group-hover:grayscale-0 select-none duration-300 ease-linear">
        </figure>
      </div>
    </div>
  </section>
</Layout>        